{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "declarationMap": false,
    "removeComments": false,
    "stripInternal": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "build",
    "docs",
    "scripts"
  ]
}
